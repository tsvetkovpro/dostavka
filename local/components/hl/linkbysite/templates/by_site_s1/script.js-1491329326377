$(document).ready(function(){$(".link-block").on("click",".link-button",function(){
		_parent = $(this).parents(".link-block");
		if(_parent.hasClass("active")){
			_parent.removeClass('active');
			BX.setCookie("BITRIX_SM_LINK_VISITOR", "Y", {expires: new Date(new Date().getTime() + 3600 * 24 * 1000), path: "/"})
		}else{
			_parent.addClass('active');
		}
	});
});